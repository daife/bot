<?xml version="1.0"?>

<robot name="sam_bot" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Define robot constants (converted to meters) -->
  <xacro:property name="base_width" value="0.128"/>
  <xacro:property name="base_length" value="0.195"/>
  <xacro:property name="base_height" value="0.115"/>
  
  <xacro:property name="wheel_radius" value="0.040"/>
  <xacro:property name="wheel_width" value="0.035"/>
  <xacro:property name="wheel_base" value="0.200"/> <!-- distance between left and right wheels -->
  <xacro:property name="wheel_separation" value="0.120"/> <!-- distance between front and rear wheels -->
  <xacro:property name="ground_clearance" value="0.015"/> <!-- distance from ground to base bottom -->
  
  <xacro:property name="bottom_camera_offset_x" value="0.1075"/> <!-- half base length + 10mm -->
  <xacro:property name="bottom_camera_offset_z" value="0.085"/> <!-- base height - 30mm -->
  
  <xacro:property name="arm_offset_x" value="-0.0725"/> <!-- 25mm from rear (half base length - 25mm) -->
  <xacro:property name="arm_offset_z" value="0.120"/> <!-- 120mm above base top -->
  <xacro:property name="arm_height" value="0.260"/> <!-- Length of arm -->
  <xacro:property name="arm_radius" value="0.020"/> <!-- Assumed radius for cylinder -->
  
  <xacro:property name="lidar_offset_x" value="-0.0835"/> <!-- 14mm from rear (half base length - 14mm) -->
  <xacro:property name="lidar_offset_z" value="0.095"/> <!-- 95mm from base bottom -->
  <xacro:property name="lidar_radius" value="0.030"/> <!-- Assumed radius for lidar -->
  <xacro:property name="lidar_height" value="0.050"/> <!-- Assumed height for lidar -->

  <!-- Define inertial property macros -->
  <xacro:macro name="box_inertia" params="m w h d">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (h*h + d*d)}" ixy="0.0" ixz="0.0" 
               iyy="${(m/12) * (w*w + d*d)}" iyz="0.0" 
               izz="${(m/12) * (w*w + h*h)}"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="${m}"/>
      <inertia ixx="${(m/12) * (3*r*r + h*h)}" ixy="0" ixz="0" 
               iyy="${(m/12) * (3*r*r + h*h)}" iyz="0" 
               izz="${(m/2) * (r*r)}"/>
    </inertial>
  </xacro:macro>

  <xacro:macro name="sphere_inertia" params="m r">
    <inertial>
      <mass value="${m}"/>
      <inertia ixx="${(2/5) * m * (r*r)}" ixy="0.0" ixz="0.0" 
               iyy="${(2/5) * m * (r*r)}" iyz="0.0" 
               izz="${(2/5) * m * (r*r)}"/>
    </inertial>
  </xacro:macro>

  <!-- Robot Base -->
  <link name="base_link">
    <collision>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
    </collision>
    <xacro:box_inertia m="5.0" w="${base_width}" d="${base_length}" h="${base_height}"/>
    <visual>
      <geometry>
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Robot Footprint -->
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 ${ground_clearance + base_height/2}" rpy="0 0 0"/>
  </joint>

  <!-- Wheels -->
  <xacro:macro name="wheel" params="prefix x_reflect y_reflect">
    <link name="${prefix}_link">
      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
      </collision>
      <xacro:cylinder_inertia m="0.5" r="${wheel_radius}" h="${wheel_width}"/>
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
        </geometry>
        <material name="Gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
    </link>

    <joint name="${prefix}_joint" type="continuous">
      <parent link="base_link"/>
      <child link="${prefix}_link"/>
      <origin xyz="${x_reflect*wheel_separation/2} ${y_reflect*wheel_base/2} ${-(base_height/2 + ground_clearance - wheel_radius)}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <!-- Create 4 wheels -->
  <xacro:wheel prefix="front_left_wheel" x_reflect="1" y_reflect="1" />
  <xacro:wheel prefix="front_right_wheel" x_reflect="1" y_reflect="-1" />
  <xacro:wheel prefix="rear_left_wheel" x_reflect="-1" y_reflect="1" />
  <xacro:wheel prefix="rear_right_wheel" x_reflect="-1" y_reflect="-1" />

  <!-- Bottom Camera -->
  <link name="bottom_camera_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.010 0.030 0.030"/>
      </geometry>
    </collision>
    <xacro:box_inertia m="0.1" w="0.030" h="0.030" d="0.010"/>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.010 0.030 0.030"/>
      </geometry>
      <material name="Black">
        <color rgba="0 0 0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="bottom_camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="bottom_camera_link"/>
    <origin xyz="${bottom_camera_offset_x} 0 ${-(base_height/2 - bottom_camera_offset_z)}" rpy="0 0 0"/>
  </joint>

  <!-- Rotatable Mechanical Arm -->
  <link name="arm_base_link">
    <collision>
      <origin xyz="${arm_height/2} 0 0" rpy="${pi/2} 0 0"/>
      <geometry>
        <cylinder radius="${arm_radius}" length="${arm_height}"/>
      </geometry>
    </collision>
    <xacro:cylinder_inertia m="1.0" r="${arm_radius}" h="${arm_height}"/>
    <visual>
      <origin xyz="${arm_height/2} 0 0" rpy="${pi/2} 0 ${pi/2} "/>
      <geometry>
        <cylinder radius="${arm_radius}" length="${arm_height}"/>
      </geometry>
      <material name="Red">
        <color rgba="1.0 0 0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="arm_joint" type="revolute">
    <parent link="base_link"/>
    <child link="arm_base_link"/>
    <origin xyz="${arm_offset_x} 0 ${base_height/2 + arm_offset_z}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="${-30 * pi/180}" upper="${15 * pi/180}" effort="100" velocity="1.0"/>
  </joint>

  <!-- Top Camera on Arm -->
  <link name="top_camera_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.010 0.030 0.030"/>
      </geometry>
    </collision>
    <xacro:box_inertia m="0.1" w="0.030" h="0.030" d="0.010"/>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.010 0.030 0.030"/>
      </geometry>
      <material name="Black">
        <color rgba="0 0 0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="top_camera_joint" type="fixed">
    <parent link="arm_base_link"/>
    <child link="top_camera_link"/>
    <origin xyz="${arm_height} 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Lidar with -45-degree rotation -->
  <link name="lidar_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${lidar_radius}" length="${lidar_height}"/>
      </geometry>
    </collision>
    <xacro:cylinder_inertia m="0.5" r="${lidar_radius}" h="${lidar_height}"/>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${lidar_radius}" length="${lidar_height}"/>
      </geometry>
      <material name="Black">
        <color rgba="0 0 0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="${lidar_offset_x} 0 ${-(base_height/2) + lidar_offset_z}" rpy="0 0 ${-pi/4}"/>
  </joint>

  <!-- IMU on the left side center -->
  <link name="imu_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.01"/>
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.02 0.01"/>
      </geometry>
      <material name="Blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
    </inertial>
  </link>

  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 ${-base_width/2} 0" rpy="0 0 ${pi/2}"/>
  </joint>

</robot>