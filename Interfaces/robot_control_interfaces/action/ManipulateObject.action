# 机器人操作动作定义

# 目标
uint8 operation  # 操作类型
uint8 OPERATION_PICK = 0  # 抓取
uint8 OPERATION_DROP = 1  # 放置

# 对象位置 (相对于bottom_camera坐标系)
geometry_msgs/Point object_position
---
# 结果
bool success
string message #失败原因
---
# 反馈
uint8 status
# 新的状态定义
uint8 STATUS_INIT = 0        # 初始化
uint8 STATUS_ADJUSTING = 1   # 调整中
uint8 STATUS_GRASPING = 2    # 抓握中
uint8 STATUS_FAILED = 3      # 抓握失败
uint8 STATUS_SUCCEEDED = 4   # 抓握成功

# 重试次数
uint8 retry_count
